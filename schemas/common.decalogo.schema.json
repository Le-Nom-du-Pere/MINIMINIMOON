{
  "$id": "common.decalogo.schema.json",
  "type": "object",
  "required": ["version", "domain", "clusters"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9]+)?$"
    },
    "domain": {
      "type": "string",
      "enum": ["PDM", "Industrial", "DNP"]
    },
    "clusters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "cluster_id",
          "cluster_code",
          "cluster_label",
          "cluster_order",
          "points"
        ],
        "properties": {
          "cluster_id": {"type": "string"},
          "cluster_code": {
            "type": "string",
            "pattern": "^CL-[A-Z0-9]{2,}$"
          },
          "cluster_label": {"type": "string"},
          "cluster_order": {
            "type": "integer",
            "minimum": 0
          },
          "aliases": {
            "type": "array",
            "items": {"type": "string"}
          },
          "status": {"type": "string"},
          "points": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "point_id",
                "point_code",
                "point_label",
                "point_order",
                "questions"
              ],
              "properties": {
                "point_id": {"type": "string"},
                "point_code": {
                  "type": "string",
                  "pattern": "^PT-[A-Z0-9]{2,}(-\\d+)?$"
                },
                "point_label": {"type": "string"},
                "point_order": {
                  "type": "integer",
                  "minimum": 0
                },
                "aliases": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "status": {"type": "string"},
                "questions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "q_id",
                      "q_code",
                      "q_label",
                      "q_type"
                    ],
                    "properties": {
                      "q_id": {"type": "string"},
                      "q_code": {
                        "type": "string",
                        "pattern": "^Q-[A-Z0-9]{2,}(-\\d+)?$"
                      },
                      "q_label": {"type": "string"},
                      "q_type": {
                        "type": "string",
                        "enum": [
                          "bool",
                          "ordinal",
                          "scale",
                          "text",
                          "evidence",
                          "multi"
                        ]
                      },
                      "q_weight": {
                        "type": "number",
                        "minimum": 0
                      },
                      "q_logic": {"type": "object"},
                      "aliases": {
                        "type": "array",
                        "items": {"type": "string"}
                      },
                      "refs": {
                        "type": "array",
                        "items": {"type": "string"}
                      },
                      "status": {"type": "string"}
                    },
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "crosswalk": {"type": "object"},
    "subclusters": {
      "type": "array",
      "items": {"type": "object"}
    },
    "kpi_templates": {
      "type": "array",
      "items": {"type": "object"}
    },
    "norm_refs": {
      "type": "array",
      "items": {"type": "string"}
    },
    "competence_map": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
